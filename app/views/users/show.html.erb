<h1>マイページ</h1>
<%= notice %>
<div>
  <h2>User info</h2>
  <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
   <table class='table table striped'>
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>Introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
    </table>
  <%= link_to "プロフィール編集", edit_user_path(current_user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit" %>
</div>

<div>
  <h2>New Book</h2>
  <%= form_with model:@book, url:books_path, method: :post, local:true do |f| %>
    <% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@book.errors.count, "error") %>prohibited this book from being saved</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <h3>Title</h3>
    <%= f.text_field :title %>
    <h3>Body</h3>
    <%= f.text_area :body %>
    <div class="create-box"><%= f.submit 'Create Book' %></div>
  <% end %>
</div>

<div>
  <h2>Books</h2>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="4"></th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><span><%= attachment_image_tag @user, :profile_image, :fill, 40, 40,fallback: "no_image.jpg"%></span></td>
        <td><span><%= link_to book.title, book_path(book)%></span></td>
        <td><span><%= book.body %></span></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>