<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1>Editing Book</h1>
        <%= form_with model:@book, local:true do |f| %>
          <% if @book.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <h2><%= pluralize(@book.errors.count, "error") %>prohibited this book from being saved</h2>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
          <% end %>
          <div class="field row">
            <label for="book_title">Title</label>
            <input class="col-xs-12 book_title" type="text" value="a" name="book[title]" id="book_title">
          </div>
          <div class="field row">
            <label for="book_opinion">Opinion</label>
            <textarea class="col-xs-12 book_body" name="book[body]" id="book_body">a</textarea>
          </div>
          <div class="actions row">
            <input type="submit" name="commit" value="Update Book" class="btn btn-primary col-xs-12" data-disable-with="Update Book">
          </div>
        <% end %>
        <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
</div>


