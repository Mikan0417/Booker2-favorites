<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>
        <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
          <table class='table table striped'>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>Introduction</th>
              <th><%= current_user.introduction %></th>
            </tr>
          </table>
          <div class="row">
            <%= link_to "", edit_user_path(current_user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit" %>
          </div>
          <h2>New Book</h2>
          <%= form_with model:@book, url:books_path, method: :post, local:true do |f| %>
            <% if @book.errors.any? %>
            <div id="error_explanation" class="alert alert-danger">
              <h2><%= pluralize(@book.errors.count, "error") %>prohibited this book from being saved</h2>
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="field row">
            <label for="book_title">Title</label>
            <input class="col-xs-12 book_title" type="text" name="book[title]" id="book_title">
          </div>
          <div class="field row">
            <label for="book_opinion">Opinion</label>
            <textarea class="col-xs-12 book_body" name="book[body]" id="book_body"></textarea>
          </div>
          <div class="actions row">
            <input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" data-disable-with="Create Book">
          </div>
        <% end %>
      </div>
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="4"></th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
            <tr> 
              <td><span><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: '40x40'%></span></td>
              <td><span><%= link_to book.title, book_path(book)%></span></td>
              <td><span><%= book.body %></span></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
